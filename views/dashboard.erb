<div>
  <a href="/new_tile">Add new tile</a>
</div>

<% @tiles.each_with_index do |tile, index| %>
  <br>
  <hr>
  <a href="/remove_tile?index=<%=index%>">Remove tile</a>
  <% if index != 0 %>
    <a href="/move_tile_up?index=<%=index%>">Move up</a>
  <% end %>
  <% if tile.editable? %>
   <a href="/edit_tile/<%= tile.class.to_s %>?index=<%=index%>">Edit tile</a>
  <% end %>
  <%= tile.display(index) %>
  <a href="/remove_tile?index=<%=index%>">Remove tile</a>
  <% if index < (@tiles.size - 1) %>
    <a href="/move_tile_down?index=<%=index%>">Move down</a>
  <% end %>
  <% if tile.editable? %>
   <a href="/edit_tile/<%= tile.class.to_s %>?index=<%=index%>">Edit tile</a>
  <% end %>
  <br>
<% end %>
